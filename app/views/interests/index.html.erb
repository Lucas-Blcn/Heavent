<div class="container">
  <% if @events.count == 0 %>
    <h1 class="headers-primary bigger-size-font text-center index-h1 border-none">Vos favoris</h1>
    <% elsif @events.count == 1 %>
      <h1 class="headers-primary bigger-size-font text-center index-h1 border-none">Vos favoris</h1>
    <% else %>
      <h1 class="headers-primary bigger-size-font text-center index-h1 border-none">Vos <%=@events.count%> favoris</h1>
  <% end %>
</div>


<div class="container mb-5 pb-3">
  <div class="row mb-5">
  <% if @events.count == 0 %>
    <p>Vous n'avez pas encore ajouté d'Heavent culturels à vos favoris.</p>
  <% end %>
  <%= render "favorite_list", events: @events %>
  </div>

</div>
