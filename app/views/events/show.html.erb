<div class="container">
    <div class="title">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-arrow-left" onclick="goBack()">
        <path d="M5.354 11.354a.5.5 0 0 1 0-.708L1.707 8l3.647-3.646a.5.5 0 0 1 .708.708L3.707 7.5H14.5a.5.5 0 0 1 0 1H3.707l2.354 2.354a.5.5 0 0 1-.708.708z"/>
      </svg>
      <h1><%= @event.title %></h1>
    </div>
  </div>

  <div class="wrapper-container">
    <div class="wrapper-image" style="background-image: url(<%= @event.background_image.present? ? @event.background_image : "https://www.ville-castres.fr/sites/default/files/thumbnails/image/internet_1100x600_actu_2.jpg" %>)"></div>
  </div>

  <div class="container">
    <div class="chapeau">
      <p><%= @event.chapeau %></p>
      <button class="toggle" onclick="toggleDescription()">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="bi bi-chevron-down">
          <path d="M1.646 2.646a.5.5 0 0 1 .708 0L8 8.293l5.646-5.647a.5.5 0 1 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
        </svg>
      </button>
    </div>

    <div class="description">
      <p><%= @event.description %></p>
    </div>
  </div>

  <script>
    function toggleDescription() {
      const description = document.querySelector('.description');
      description.classList.toggle('show');
    }
  </script>
