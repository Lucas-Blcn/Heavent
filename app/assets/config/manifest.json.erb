{
  "background_color": "white",
  "description": "Heavent c'est l'application parfaite pour organiser ses sorties culturelles à la dernière minute",
  "display": "fullscreen",
  "name": "Heavent",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons-favicon/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons-favicon/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
